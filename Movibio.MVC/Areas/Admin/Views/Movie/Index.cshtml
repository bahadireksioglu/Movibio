@model ICollection<Movibio.DataLayer.Concrete.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="modal-placeholder" aria-hidden="true"></div>
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>FİLM AYARLARI</h3>
                <button id="btn-new-movie" class="btn btn-success mb-3">Film Ekle</button>
            </div>

        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                FİLM LİSTESİ
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Film Afişi</th>
                            <th>Film Adı</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Örnek Resim</td>
                            <td>Örnek İsim</td>
                            <td>
                                <button class="btn btn-primary ml-2"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-danger ml-2"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.PosterPath</td>
                            <td>@item.Name</td>
                            <td>
                                <button class="btn btn-primary ml-2"><i class="fas fa-edit"></i></button>
                                <button class="btn btn-danger ml-2"><i class="fas fa-trash-alt"></i></button>
                            </td>
                        </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </section>
</div>

@section Scripts{ 
<script src="~/adminpanel/js/movie.js"></script>
}


