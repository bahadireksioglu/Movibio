@model ICollection<Movibio.DataLayer.Concrete.Director>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="modal-placeholder" aria-hidden="true"></div>
<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>YÖNETMEN AYARLARI</h3>
                <button id="btn-new-director" class="btn btn-success mb-3">Yönetmen Ekle</button>
            </div>

        </div>
    </div>
    <section class="section">
        <div class="card">
            <div class="card-header">
                YÖNETMEN LİSTESİ
            </div>
            <div class="card-body">
                <table class="table table-striped" id="table1">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Ad - Soyad</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/images/directors/@item.PicturePath" alt="@(item.Id)" style="max-height:125px; max-width:125px;" /></td>
                                    <td>@(item.FirstName +" "+ item.LastName)</td>
                                    <td>
                                        <button class="btn btn-primary ml-2" id="btn-edit-director" data-id="@item.Id"><i class="fas fa-edit"></i></button>
                                        <button class="btn btn-danger ml-2" id="btn-delete-director" data-id="@item.Id"><i class="fas fa-trash-alt"></i></button>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section Scripts{
    <script src="~/adminpanel/js/director.js"></script>
}

