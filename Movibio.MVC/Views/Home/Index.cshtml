@model ICollection<Movibio.DataLayer.Concrete.Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="home" id="home">
    <div class="max-width">
        <div class="carousel owl-carousel">
            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    <div class="card">
                        <div class="box">
                            <img src="~/images/movies/@item.Name/@item.PosterPath" alt="" onclick="window.location='/Movie/Index/?movieId=@item.Id'">
                        </div>
                    </div>
                }
            }

        </div>
    </div>
</section>


